<section class="cart py-16">
    <% if(session.cart) {%>
    <div class="order container mx-auto xl:w-1/2">
        <div class="flex items-center border-b border-gray-300 pb-4">
            <img src="/img/cart-black.png" alt="">
            <h1 class="font-bold ml-4 text-2xl">Order summary</h1>
        </div>

        <div class="pizza-list">
            <%for(let pizza of Object.values(session.cart.items)){ %>
            <div class="flex items-center py-4">
                <img class="w-24" src="/img/<%= pizza.item.image %>" alt="">
                <div class="flex-1 ml-4">
                    <h1><%= pizza.item.name %></h1>
                    <span><%= pizza.item.isize %></span>
                </div>
                <span class="flex-1"><%= pizza.qty %> Pcs</span>
                <span class="font-bold text-lg">$<%= pizza.item.price * pizza.qty  %></span>
            </div>
            <%}%>

   

            <hr>

            <div class="text-right py-4">

                <div class="">
                    <span class="text-lg font-bold">Total Amount:</span>
                    <span class="amount text-2xl font-bold ml-2">$<%= session.cart.totalPrice %></span>
        </div>

        <% if(user) {%>
        <div class="">

            <form action="/orders" method="POST" class="mt-12">
                <input type="text" class="border border-gray-400 p-2 mb-4 w-1/2" id="" name="phone"
                    placeholder="Phone number">
                <input type="text" class="border border-gray-400 p-2 w-1/2" id="" name="address" placeholder="Address">
                <div class="">
                    <button type="submit" class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6">Order
                        Now</button>
                </div>
            </form>
        </div>
        <% }else{%>

        <a href="/login"
            class="inline-block cursor-pointer px-6 btn-primary py-2 rounded-full text-white font-bold mt-6">Log
            in to continue </a>
        <% }%>


    </div>

    </div>
    </div>

    <%} else {%>

    <section class="empty-cart py-16">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl font-bold mb-2">Cart Empty ðŸ˜•</h1>
            <p class="text-gray-500 text-lg mb-12">You probably haven`t ordered a pizza yet.<br>
                To order a pizza,go to the main page</p>
            <img src="/img/empty-cart.png" alt="empty-cart" class="w-2/5 mx-auto">
            <a href="/"><button href="/" class="px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">Go
                    back</button></a>
        </div>
    </section>

    <%}%>

</section>